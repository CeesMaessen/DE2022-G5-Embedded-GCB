{
  "steps": [
	{
       "name": "gcr.io/cloud-builders/gsutil",
       "args": [
           "cp",
		"gs://model_cees/svc_model.h5",
           "./prediction-ui-embedded-gcs"
        ]
    },
    
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/data-engineering-jads/prediction-ui-embedded-gcs:9.9.9",
        "./prediction-ui-embedded-gcs"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/data-engineering-jads/prediction-ui-embedded-gcs:9.9.9"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
       "args": [
        "run",
        "deploy",
        "prediction-service",
        "--image",
        "gcr.io/data-engineering-jads/prediction-ui-embedded-gcs:9.9.9",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--allow-unauthenticated",
        "--update-env-vars",
        "MODEL_NAME=svc_model.h5",
        "--no-cpu-throttling",
        "--memory",
        "4 Gi"
      ]
    }
  ]
}
